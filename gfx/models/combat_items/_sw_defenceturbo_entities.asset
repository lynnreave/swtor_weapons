######
# Defence Turbolaser Green
######

# Defence Turbo muzzle flash

entity = {
	name = "defence_turbo_g_small_muzzle_entity"
	cull_radius = 0.5
	
	default_state = "idle"
	state = { name = "idle" state_time = 7 looping = no
		event = { time = 0 particle = "green_turbolaser_small_muzzle_particle" keep_particle = yes sound = { soundeffect = defence_turbo } }
		event = { trigger_once = yes sound = { soundeffect = "distance_defence_turbo" } } 
	}
}


# PROJECTILE

entity = {
	name = "defence_turbo_g_small_entity"
	pdxmesh = "sw_turbolaser_g_01_mesh"
	
	default_state = "idle"
	state = { name = "idle" }
	
	scale = 0.7
}

# HIT EFFECT

entity = {
	name = "defence_turbo_small_hit_entity"
	pdxmesh = "locator_mesh"
	
	state = { name = "explode_med_hp" state_time = 5.0 looping = no
		event = { time = 0.0 node = "root" particle = "proj_pd_hit_effect" }
	}
	state = { name = "explode_med_shield" state_time = 0.8 looping = no
		event = { time = 0.0 node = "root" particle = "medium_hit_effect_shield" }
	}
	default_state = "explode_med_hp"
}

